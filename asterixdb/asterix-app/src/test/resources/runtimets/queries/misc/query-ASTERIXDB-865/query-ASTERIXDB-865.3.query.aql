/* This test is to verify the fix for ASTERIXDB-865. */

use dataverse test;

for $t in dataset page_views
let $header := if ($t.action = 1)
    then [ $t.page_info.a ]
    else
        for $pl in $t.page_links
        return $pl.b
for $h in $header
order by $t.user, $h
return
{ "user": $t.user, "header": $h }
;

